{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "❯ ",
    "background": "transparent",
    "foreground_templates": [
      "{{if gt .Code 0}}red{{end}}",
      "{{if eq .Code 0}}magenta{{end}}"
    ]
  },
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "options": {
            "home_icon": "~",
            "style": "powerlevel"
          },
          "template": "{{ .Path }}",
          "foreground": "cyan",
          "powerline_symbol": "\ue0b0",
          "background": "transparent",
          "type": "path",
          "style": "plain"
        },
        {
          "options": {
            "branch_ahead_icon": "\u2191",
            "branch_behind_icon": "\u2193",
            "branch_icon": "\ue0a0 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " {{ .HEAD }}{{if .BranchStatus }} <cyan>{{ .BranchStatus }}</>{{ end }}{{ if .Working.Changed }} <yellow>*</> <red>{{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} <green>{{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} <blue>\ueb4b {{ .StashCount }}</>{{ end }} ",
          "foreground": "#c7c7c7",
          "powerline_symbol": "\ue0b0",
          "background": "transparent",
          "type": "git",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "options": {
            "always_enabled": true,
            "style": "roundrock",
            "threshold": 500
          },
          "template": "{{ .FormattedMs }}",
          "foreground": "yellow",
          "background": "transparent",
          "type": "executiontime",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "❯",
          "foreground": "magenta",
          "background": "transparent",
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{if gt .Code 0}}red{{end}}",
            "{{if eq .Code 0}}magenta{{end}}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 4,
  "final_space": true
}
