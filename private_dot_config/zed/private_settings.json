// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "autosave": "on_window_change",
    "auto_update": true,
    "auto_signature_help": false,
    "always_treat_brackets_as_autoclosed": false,

    "buffer_font_family": "Roboto Mono",
    "buffer_font_features": {
        "liga": false
    },
    "buffer_font_size": 12,
    "buffer_font_weight": 400,
    "buffer_line_height": "comfortable",

    "confirm_quit": false,
    "current_line_highlight": "all",
    "cursor_blink": false,

    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 200,
            "padding": 4,
            "min_column": 0,
            "max_severity": null
        }
    },

    "jsx_tag_auto_close": {
        "enabled": false
    },

    "scrollbar": {
        "show": "auto",
        "cursors": true,
        "diagnostics": "all",
        "git_diff": true,
        "search_results": true,
        "selected_symbol": true
    },
    "show_completions_on_input": true,
    "show_whitespaces": "selection",
    "soft_wrap": "editor_width",

    "tab_size": 4,
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "close_position": "right",
        "file_icons": false,
        "git_status": true
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "terminal": {
        "alternate_scroll": "off",
        "font_family": "MesloLGM Nerd Font",
        "blinking": "off",
        "button": true,
        "copy_on_select": false,
        "working_directory": "current_project_directory"
    },

    "theme": "Zed Legacy: Atelier Cave Dark",
    "icon_theme": {
        "mode": "dark",
        "dark": "Zed (Default)",
        "light": "Zed (Default)"
    },

    "experimental.theme_overrides": {
        "editor.document_highlight.read_background": "#586cda5d",
        "editor.document_highlight.bracket_background": "#586cda5d",
        "syntax": {
            "comment": {
                "color": "#5F8B3B"
            }
        }
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true,
        "selections_menu": true
    },

    "enable_language_server": true,
    "ensure_final_newline_on_save": true,

    "format_on_save": "on",

    "use_autoclose": false,
    "use_auto_surround": true,

    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true
        }
    },

    "indent_guides": {
        "enabled": true,
        "active_line_width": 2,
        "background_coloring": "disabled",
        "coloring": "fixed"
    },
    "inlay_hints": {
        "enabled": true
    },

    "hard_tabs": false,
    "hover_popover_enabled": true,

    "journal": {
        "hour_format": "hour24"
    },

    "show_wrap_guides": true,
    "wrap_guides": [80],
    "preferred_line_length": 80,
    "pane_split_direction_vertical": "right",
    "preview_tabs": {
        "enabled": true,
        "enable_preview_from_file_finder": false,
        "enable_preview_from_code_navigation": false
    },
    "project_panel": {
        "button": true,
        "dock": "left",
        "git_status": true,
        "default_width": 240,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "indent_size": 12,
        "scrollbar": {
            "show": "never"
        },
        "file_icons": true,
        "folder_icons": true
    },

    "remove_trailing_whitespace_on_save": true,

    "vim_mode": true,
    "vim": {
        "use_system_clipboard": "on_yank"
    },
    "relative_line_numbers": true,

    "base_keymap": "VSCode",
    "ui_font_size": 12,
    "ui_font_family": "Intel One Mono",
    "features": {
        "edit_prediction_provider": "supermaven"
    },
    "show_edit_predictions": true,

    "languages": {
        "JavaScript": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "TypeScript": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "TSX": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "Vue.js": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "Svelte": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "CSV": {
            "soft_wrap": "editor_width"
        },
        "Rainbow CSV": {
            "soft_wrap": "editor_width"
        },
        "Make": {
            "hard_tabs": true
        },
        "Go": {
            "language_servers": ["gopls", "golangci-lint"]
        },
        "SQL": {
            "formatter": {
                "external": {
                    "command": "sql-formatter",
                    "arguments": ["--language", "postgresql"]
                }
            }
        }
    },
    "lsp": {
        "gopls": {
            "initialization_options": {
                "hints": {
                    "assignVariableTypes": false,
                    "compositeLiteralFields": false,
                    "compositeLiteralTypes": false,
                    "functionTypeParameters": true,
                    "parameterNames": true,
                    "constantValues": true,
                    "rangeVariableTypes": true
                }
            }
        },
        "golangci-lint": {
            "initialization_options": {
                "command": [
                    "golangci-lint",
                    "run",
                    "--output.json.path=stdout",
                    "--issues-exit-code=1",
                    "--show-stats=false"
                ]
            }
        },
        "vtsls": {
            "settings": {
                "javascript": {
                    "inlayHints": {
                        "parameterNames": {
                            "enabled": false,
                            "suppressWhenArgumentMatchesName": false
                        },
                        "parameterTypes": {
                            "enabled": false
                        },
                        "variableTypes": {
                            "enabled": false,
                            "suppressWhenTypeMatchesName": true
                        },
                        "propertyDeclarationTypes": {
                            "enabled": false
                        },
                        "functionLikeReturnTypes": {
                            "enabled": false
                        },
                        "enumMemberValues": {
                            "enabled": false
                        }
                    }
                },
                "typescript": {
                    "inlayHints": {
                        "parameterNames": {
                            "enabled": false,
                            "suppressWhenArgumentMatchesName": false
                        },
                        "parameterTypes": {
                            "enabled": false
                        },
                        "variableTypes": {
                            "enabled": false,
                            "suppressWhenTypeMatchesName": true
                        },
                        "propertyDeclarationTypes": {
                            "enabled": false
                        },
                        "functionLikeReturnTypes": {
                            "enabled": false
                        },
                        "enumMemberValues": {
                            "enabled": false
                        }
                    }
                }
            }
        }
    },

    // Extensions
    "auto_install_extensions": {
        "codebook": true,
        "csv": true,
        "docker-compose": true,
        "dockerfile": true,
        "emmet": true,
        "git-firefly": true,
        "golangci-lint": true,
        "html": true,
        "lua": true,
        "make": true,
        "sql": true,
        "svelte": true,
        "templ": true,
        "toml": true,
        "vue": true,
        "wakatime": true,
        "zed-legacy-themes": true
    }
}
